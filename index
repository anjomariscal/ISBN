<body>
    <div class="container">
        <header>
            <h1><i class="fas fa-book"></i> Consulta de Livros por ISBN</h1>
            <p class="subtitle">Insira uma lista de ISBNs e obtenha todas as informações dos livros</p>
        </header>

        <div class="app-container">
            <div class="input-section section">
                <h2 class="section-title"><i class="fas fa-edit"></i> Entrada de ISBNs</h2>
                
                <div class="instructions">
                    <p><strong>Instruções:</strong> Insira os números ISBN (10 ou 13 dígitos) separados por vírgulas, espaços ou cada um em uma linha.</p>
                    <p><strong>Exemplo:</strong> 9788535914849, 9788501112510, 9788532530783</p>
                </div>
                
                <textarea id="isbnInput" placeholder="Insira os ISBNs aqui...">9788535914849, 9788501112510, 9788532530783, 9788539004119, 9788571644953</textarea>
                
                <div class="buttons">
                    <button id="searchBtn" class="btn">
                        <i class="fas fa-search"></i> Buscar Livros
                    </button>
                    <button id="clearBtn" class="btn btn-clear">
                        <i class="fas fa-trash-alt"></i> Limpar
                    </button>
                </div>
                
                <div id="status" class="status"></div>
                
                <div id="loading" class="loading">
                    <div class="spinner"></div>
                    <p>Buscando informações dos livros...</p>
                </div>
            </div>
            
            <div class="results-section section">
                <h2 class="section-title">
                    <i class="fas fa-list"></i> Resultados 
                    <span id="resultCounter" class="counter">0 livros</span>
                </h2>
                
                <div class="buttons">
                    <button id="exportBtn" class="btn btn-export" disabled>
                        <i class="fas fa-file-excel"></i> Exportar para Excel
                    </button>
                    <button id="exportCsvBtn" class="btn btn-export" disabled>
                        <i class="fas fa-file-csv"></i> Exportar para CSV
                    </button>
                </div>
                
                <div id="resultsContainer" class="results-container">
                    <div class="empty-results">
                        <i class="fas fa-book-open"></i>
                        <p>Nenhum livro encontrado. Insira os ISBNs e clique em "Buscar Livros".</p>
                    </div>
                </div>
            </div>
        </div>
        
        <footer>
            <p>Aplicação Web para Consulta de Livros por ISBN</p>
            <p>Utiliza a API Open Library para buscar informações sobre os livros</p>
	    <p>Angel Mariscal &copy; <span id="currentYear"></span></p>
        </footer>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar ano atual no footer
            document.getElementById('currentYear').textContent = new Date().getFullYear();
            
            // Elementos da DOM
            const isbnInput = document.getElementById('isbnInput');
            const searchBtn = document.getElementById('searchBtn');
            const clearBtn = document.getElementById('clearBtn');
            const exportBtn = document.getElementById('exportBtn');
            const exportCsvBtn = document.getElementById('exportCsvBtn');
            const resultsContainer = document.getElementById('resultsContainer');
            const resultCounter = document.getElementById('resultCounter');
            const statusDiv = document.getElementById('status');
            const loadingDiv = document.getElementById('loading');
            
            // Array para armazenar os livros encontrados
            let books = [];
            
            // Exemplo de livros para demonstração
            const sampleBooks = [
                {
                    title: "1984",
                    author: "George Orwell",
                    isbn: "9788535914849",
                    year: "2009",
                    pages: "416",
                    publisher: "Companhia das Letras",
                    cover: "https://covers.openlibrary.org/b/id/7222246-L.jpg",
                    description: "Um clássico distópico sobre um futuro sombrio onde o governo controla todos os aspectos da vida."
                },
                {
                    title: "O Alquimista",
                    author: "Paulo Coelho",
                    isbn: "9788501112510",
                    year: "2014",
                    pages: "208",
                    publisher: "Paralela",
                    cover: "https://covers.openlibrary.org/b/id/8908126-L.jpg",
                    description: "A mágica história de Santiago, um menino pastor andaluz que viaja da Espanha ao Egito em busca de um tesouro enterrado nas pirâmides."
                }
            ];
            
            // Função para extrair ISBNs do texto de entrada
            function extractISBNs(text) {
                // Remove espaços extras e divide por vírgulas, espaços ou quebras de linha
                return text.split(/[,\s\n]+/)
                    .map(isbn => isbn.trim())
                    .filter(isbn => isbn.length > 0)
                    .filter(isbn => /^\d{10}(\d{3})?$/.test(isbn)); // Filtra apenas números com 10 ou 13 dígitos
            }
            
            // Função para exibir mensagem de status
            function showStatus(message, type = 'info') {
                statusDiv.textContent = message;
                statusDiv.className = `status ${type}`;
                
                // Remover a mensagem após alguns segundos para tipos 'success' e 'info'
                if (type === 'success' || type === 'info') {
                    setTimeout(() => {
                        statusDiv.className = 'status';
                    }, 5000);
                }
            }
            
            // Função para buscar informações de um livro por ISBN
            async function fetchBookInfo(isbn) {
                try {
                    // Tenta buscar da Open Library API
                    const response = await fetch(`https://openlibrary.org/api/books?bibkeys=ISBN:${isbn}&format=json&jscmd=data`);
                    
                    if (!response.ok) {
                        throw new Error(`Erro na requisição: ${response.status}`);
                    }
                    
                    const data = await response.json();
                    const bookKey = `ISBN:${isbn}`;
                    
                    if (data[bookKey]) {
                        const bookData = data[bookKey];
                        
                        return {
                            title: bookData.title || 'Título não disponível',
                            author: bookData.authors ? bookData.authors.map(a => a.name).join(', ') : 'Autor desconhecido',
                            isbn: isbn,
                            year: bookData.publish_date || 'Ano não disponível',
                            pages: bookData.number_of_pages || 'Número de páginas não disponível',
                            publisher: bookData.publishers ? bookData.publishers.map(p => p.name).join(', ') : 'Editora não disponível',
                            cover: bookData.cover ? bookData.cover.large : 'https://via.placeholder.com/100x140?text=Sem+Capa',
                            description: bookData.subtitle || bookData.excerpts ? (bookData.excerpts[0] ? bookData.excerpts[0].text.substring(0, 200) + '...' : 'Descrição não disponível') : 'Descrição não disponível'
                        };
                    } else {
                        // Se não encontrar na API, retorna um livro com dados básicos
                        return {
                            title: 'Livro não encontrado',
                            author: 'Autor desconhecido',
                            isbn: isbn,
                            year: 'N/A',
                            pages: 'N/A',
                            publisher: 'N/A',
                            cover: 'https://via.placeholder.com/100x140?text=Não+Encontrado',
                            description: 'Não foi possível encontrar informações para este ISBN.'
                        };
                    }
                } catch (error) {
                    console.error(`Erro ao buscar ISBN ${isbn}:`, error);
                    
                    // Retorna um livro com dados de erro
                    return {
                        title: 'Erro na busca',
                        author: 'N/A',
                        isbn: isbn,
                        year: 'N/A',
                        pages: 'N/A',
                        publisher: 'N/A',
                        cover: 'https://via.placeholder.com/100x140?text=Erro',
                        description: `Erro ao buscar informações: ${error.message}`
                    };
                }
            }
            
            // Função para renderizar os livros na tela
            function renderBooks(booksArray) {
                if (booksArray.length === 0) {
                    resultsContainer.innerHTML = `
                        <div class="empty-results">
                            <i class="fas fa-book-open"></i>
                            <p>Nenhum livro encontrado. Insira os ISBNs e clique em "Buscar Livros".</p>
                        </div>
                    `;
                    resultCounter.textContent = '0 livros';
                    exportBtn.disabled = true;
                    exportCsvBtn.disabled = true;
                    return;
                }
                
                let html = '';
                
                booksArray.forEach(book => {
                    html += `
                        <div class="book-card">
                            <img src="${book.cover}" alt="Capa do livro ${book.title}" class="book-cover" onerror="this.src='https://via.placeholder.com/100x140?text=Sem+Capa'">
                            <div class="book-details">
                                <h3 class="book-title">${book.title}</h3>
                                <p class="book-author">${book.author}</p>
                                <p>${book.description}</p>
                                <div class="book-info">
                                    <span class="info-item isbn"><strong>ISBN:</strong> ${book.isbn}</span>
                                    ${book.pages !== 'N/A' ? `<span class="info-item pages"><strong>Páginas:</strong> ${book.pages}</span>` : ''}
                                    ${book.year !== 'N/A' ? `<span class="info-item year"><strong>Ano:</strong> ${book.year}</span>` : ''}
                                    ${book.publisher !== 'N/A' ? `<span class="info-item"><strong>Editora:</strong> ${book.publisher}</span>` : ''}
                                </div>
                            </div>
                        </div>
                    `;
                });
                
                resultsContainer.innerHTML = html;
                resultCounter.textContent = `${booksArray.length} livro(s)`;
                exportBtn.disabled = false;
                exportCsvBtn.disabled = false;
            }
            
            // Função para buscar livros
            async function searchBooks() {
                const inputText = isbnInput.value.trim();
                
                if (!inputText) {
                    showStatus('Por favor, insira pelo menos um ISBN.', 'error');
                    return;
                }
                
                const isbns = extractISBNs(inputText);
                
                if (isbns.length === 0) {
                    showStatus('Nenhum ISBN válido encontrado. Certifique-se de que os ISBNs têm 10 ou 13 dígitos.', 'error');
                    return;
                }
                
                showStatus(`Encontrados ${isbns.length} ISBN(s) válido(s). Buscando informações...`, 'info');
                
                // Ativar loading
                loadingDiv.classList.add('active');
                searchBtn.disabled = true;
                
                try {
                    // Buscar informações para cada ISBN
                    books = [];
                    
                    // Usar Promise.all para buscar todos os livros simultaneamente
                    const bookPromises = isbns.map(isbn => fetchBookInfo(isbn));
                    books = await Promise.all(bookPromises);
                    
                    // Renderizar os resultados
                    renderBooks(books);
                    
                    showStatus(`${books.filter(b => b.title !== 'Livro não encontrado' && b.title !== 'Erro na busca').length} de ${isbns.length} livro(s) encontrado(s) com sucesso!`, 'success');
                } catch (error) {
                    console.error('Erro ao buscar livros:', error);
                    showStatus(`Erro ao buscar livros: ${error.message}`, 'error');
                } finally {
                    // Desativar loading
                    loadingDiv.classList.remove('active');
                    searchBtn.disabled = false;
                }
            }
            
            // Função para exportar para Excel
            function exportToExcel() {
                if (books.length === 0) return;
                
                // Preparar dados para a planilha
                const worksheetData = books.map(book => ({
                    'Título': book.title,
                    'Autor': book.author,
                    'ISBN': book.isbn,
                    'Ano': book.year,
                    'Páginas': book.pages,
                    'Editora': book.publisher,
                    'Descrição': book.description
                }));
                
                // Criar worksheet
                const worksheet = XLSX.utils.json_to_sheet(worksheetData);
                
                // Criar workbook
                const workbook = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(workbook, worksheet, 'Livros');
                
                // Gerar arquivo Excel
                XLSX.writeFile(workbook, `livros_${new Date().toISOString().slice(0,10)}.xlsx`);
                
                showStatus('Planilha Excel gerada com sucesso!', 'success');
            }
            
            // Função para exportar para CSV
            function exportToCSV() {
                if (books.length === 0) return;
                
                // Cabeçalhos CSV
                const headers = ['Título', 'Autor', 'ISBN', 'Ano', 'Páginas', 'Editora', 'Descrição'];
                
                // Dados CSV
                const csvRows = books.map(book => [
                    `"${book.title.replace(/"/g, '""')}"`,
                    `"${book.author.replace(/"/g, '""')}"`,
                    `"${book.isbn}"`,
                    `"${book.year}"`,
                    `"${book.pages}"`,
                    `"${book.publisher.replace(/"/g, '""')}"`,
                    `"${book.description.replace(/"/g, '""')}"`
                ]);
                
                // Combinar cabeçalhos e dados
                const csvContent = [
                    headers.join(','),
                    ...csvRows.map(row => row.join(','))
                ].join('\n');
                
                // Criar blob e fazer download
                const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
                const link = document.createElement('a');
                const url = URL.createObjectURL(blob);
                
                link.setAttribute('href', url);
                link.setAttribute('download', `livros_${new Date().toISOString().slice(0,10)}.csv`);
                link.style.visibility = 'hidden';
                
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
                
                showStatus('Arquivo CSV gerado com sucesso!', 'success');
            }
            
            // Função para limpar tudo
            function clearAll() {
                isbnInput.value = '';
                books = [];
                renderBooks([]);
                showStatus('Campos limpos com sucesso!', 'success');
            }
            
            // Event Listeners
            searchBtn.addEventListener('click', searchBooks);
            clearBtn.addEventListener('click', clearAll);
            exportBtn.addEventListener('click', exportToExcel);
            exportCsvBtn.addEventListener('click', exportToCSV);
            
            // Carregar alguns livros de exemplo ao iniciar
            setTimeout(() => {
                books = sampleBooks;
                renderBooks(books);
                showStatus('Aplicação carregada. Insira os ISBNs ou use os exemplos já fornecidos.', 'info');
            }, 500);
        });
    </script>
</body>
</html>
