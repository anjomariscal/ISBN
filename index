            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .btn:hover {
            background-color: #3a5795;
            transform: translateY(-2px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        }

        .btn:active {
            transform: translateY(0);
        }

        .btn:disabled {
            background-color: #a0aec0;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .btn-export {
            background-color: #10b981;
        }

        .btn-export:hover {
            background-color: #0da271;
        }

        .btn-clear {
            background-color: #ef4444;
        }

        .btn-clear:hover {
            background-color: #dc2626;
        }

        .buttons {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .status {
            padding: 12px 15px;
            border-radius: 8px;
            margin-top: 20px;
            display: none;
            font-weight: 500;
        }

        .status.success {
            background-color: #d1fae5;
            color: #065f46;
            display: block;
        }

        .status.error {
            background-color: #fee2e2;
            color: #991b1b;
            display: block;
        }

        .status.info {
            background-color: #dbeafe;
            color: #1e40af;
            display: block;
        }

        .loading {
            display: none;
            text-align: center;
            padding: 20px;
        }

        .loading.active {
            display: block;
        }

        .spinner {
            border: 4px solid rgba(0, 0, 0, 0.1);
            border-radius: 50%;
            border-top: 4px solid #4b6cb7;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 15px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .results-container {
            max-height: 600px;
            overflow-y: auto;
            margin-top: 20px;
        }

        .book-card {
            display: flex;
            border: 1px solid #e1e5eb;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            background-color: white;
            transition: transform 0.2s;
        }

        .book-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(0, 0, 0, 0.05);
        }

        .book-cover {
            width: 100px;
            min-width: 100px;
            height: 140px;
            object-fit: cover;
            border-radius: 5px;
            margin-right: 20px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        .book-details {
            flex: 1;
        }

        .book-title {
            font-size: 1.2rem;
            font-weight: 700;
